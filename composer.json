{
    "name": "12cactus/espinoso",
    "description": "Espinoso :: Telegram Bot",
    "keywords": ["telegram", "bot", "espinoso"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "~7.1.0",
        "ext-gd": "*",
        "cmfcmf/openweathermap-php-api": "2.2.0",
        "doctrine/dbal": "^2.6",
        "fabpot/goutte": "^3.2",
        "gmopx/laravel-owm": "0.1.1",
        "guzzlehttp/guzzle": "^6.3",
        "imdbphp/imdbphp": "^5.2",
        "intervention/image": "^2.4",
        "irazasyed/telegram-bot-sdk": "^2.2",
        "laravel/framework": "5.4.*",
        "laravel/tinker": "~1.0",
        "php-http/guzzle6-adapter": "^1.1",
        "php-http/message": "^1.6",
        "spatie/emoji": "^1.0",
        "stichoza/google-translate-php": "~3.2",
        "unisharp/laravel-settings": "^2.0",
        "vinkla/instagram": "^8.0"
    },
    "require-dev": {
        "codeclimate/php-test-reporter": "dev-master",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.7"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "files": [
            "app/helpers.php"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize",
            "php artisan storage:link"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
